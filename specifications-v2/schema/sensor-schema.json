{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Сенсор Школьной лаборатории (Schema)",
  "description": "",
  "type": "object",
  "additionalProperties": false,
  "$defs": {
    "title": {
      "type": "string",
      "minLength": 0
    },
    "json": {
      "type": "string",
      "pattern": "^([0-9a-z-./])+\\.json$"
    },
    "html": {
      "type": "string",
      "pattern": "^([0-9a-z-./])+\\.html$"
    },
    "uuid16": {
      "type": "string",
      "pattern": "^([0-9a-f-])+$",
      "minLength": 4,
      "maxLength": 4
    },
    "uuid128": {
      "type": "string",
      "pattern": "^([0-9a-f-])+$",
      "minLength": 36,
      "maxLength": 36
    },
    "integerOrNumber": {
      "type": [
        "integer",
        "number"
      ]
    },
    "valueType": {
      "type": "string",
      "enum": [
        "BOOL",
        "INT8",
        "UINT8",
        "FLAG8",
        "INT16",
        "UINT16",
        "FLAG16",
        "INT32",
        "UINT32",
        "FLAG32",
        "FLOAT32",
        "STRING",
        "IPADDR"
      ],
      "default": "BOOL"
    },
    "parameterGroup": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "enum": [
          "SENSOR"
        ]
      }
    },
    "titleSource": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9]+$": {
          "type": "object",
          "properties": {
            "title": {
              "$ref": "#/$defs/title"
            },
            "source": {
              "$ref": "#/$defs/html"
            }
          },
          "required": [
            "title"
          ]
        }
      },
      "minProperties": 1
    },
    "sensorValueMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "value": {
          "type": "object"
        },
        "valueLabel": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameterGroup": {
          "$ref": "#/$defs/parameterGroup"
        }
      },
      "required": [
        "valueLabel"
      ]
    },
    "sensorValue": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        },
        "meta": {
          "$ref": "#/$defs/sensorValueMeta"
        }
      }
    },
    "sensorStageMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "stage": {
          "$ref": "#/$defs/titleSource"
        },
        "valueLabel": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameterGroup": {
          "$ref": "#/$defs/parameterGroup"
        }
      },
      "required": [
        "valueLabel"
      ]
    },
    "sensorStage": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        },
        "meta": {
          "$ref": "#/$defs/sensorStageMeta"
        }
      }
    },
    "sensorErrorMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "flag": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^.+$": {
              "type": "integer"
            }
          },
          "minProperties": 1
        },
        "valueLabel": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameterGroup": {
          "$ref": "#/$defs/parameterGroup"
        }
      },
      "required": [
        "valueLabel"
      ]
    },
    "sensorError": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        },
        "meta": {
          "$ref": "#/$defs/sensorErrorMeta"
        }
      }
    },
    "sensorCommand": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        }
      }
    },
    "sensorRangeMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "range": {
          "type": "array",
          "items": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
              "minValue": {
                "$ref": "#/$defs/integerOrNumber"
              },
              "maxValue": {
                "$ref": "#/$defs/integerOrNumber"
              },
              "precision": {
                "type": "integer",
                "minimum": 0
              },
              "unitName": {
                "type": "string",
                "minLength": 0
              },
              "unitNameOffset": {
                "type": "integer",
                "minimum": 0
              },
              "calibrationPoints": {
                "type": "integer",
                "minimum": 0
              }
            },
            "required": [
              "minValue",
              "maxValue",
              "precision",
              "unitName",
              "unitNameOffset",
              "calibrationPoints"
            ]
          },
          "minItems": 1
        },
        "valueLabel": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "parameterGroup": {
          "$ref": "#/$defs/parameterGroup"
        }
      },
      "required": [
        "valueLabel",
        "range"
      ]
    },
    "sensorRange": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        },
        "meta": {
          "$ref": "#/$defs/sensorRangeMeta"
        }
      },
      "required": [
        "meta"
      ]
    },
    "sensorCalibration": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "type": [
            "string",
            "null"
          ]
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "$ref": "#/$defs/valueType"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        }
      }
    }
  },
  "properties": {
    "$schema": {
      "$ref": "#/$defs/json"
    },
    "#include": {
      "$ref": "#/$defs/json"
    },
    "type": {
      "type": "string",
      "pattern": "^([0-9a-z/])+$",
      "minLength": 4,
      "maxLength": 4
    },
    "title": {
      "type": "string",
      "minLength": 0
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "parameters": {
      "type": "object",
      "minProperties": 1,
      "additionalProperties": false,
      "properties": {
        "0b00": {
          "$ref": "#/$defs/sensorValue"
        },
        "0b01": {
          "$ref": "#/$defs/sensorStage"
        },
        "0b02": {
          "$ref": "#/$defs/sensorError"
        },
        "8b00": {
          "$ref": "#/$defs/sensorCommand"
        },
        "8b01": {
          "$ref": "#/$defs/sensorRange"
        },
        "8b02": {
          "$ref": "#/$defs/sensorCalibration"
        }
      }
    },
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "ble": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "characteristicUuid": {
              "$ref": "#/$defs/uuid128"
            },
            "descriptorUuid": {
              "$ref": "#/$defs/uuid16"
            }
          },
          "required": [
            "characteristicUuid"
          ]
        }
      },
      "required": [
        "ble"
      ]
    },
    "required": [
      "type",
      "title",
      "parameters"
    ]
  }
}