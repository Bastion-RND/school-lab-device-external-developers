{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Школьная лаборатория (Schema)",
  "description": "",
  "$defs": {
    "json": {
      "type": "string",
      "pattern": "^([0-9a-z-./])+\\.json$"
    },
    "uuid16": {
      "type": "string",
      "pattern": "^([0-9a-f-])+$",
      "minLength": 4,
      "maxLength": 4
    },
    "uuid128": {
      "type": "string",
      "pattern": "^([0-9a-f-])+$",
      "minLength": 36,
      "maxLength": 36
    },
    "title": {
      "type": "string",
      "minLength": 0
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "lifeCycle": {
      "type": "string",
      "enum": [
        "UNAVAILABLE",
        "PRE-ALPHA",
        "ALPHA",
        "BETA",
        "RELEASE CANDIDATE",
        "RELEASE",
        "PRODUCTION",
        "END OF LIFE"
      ],
      "default": "BETA"
    },
    "parameterMeta": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "sortOrder": {
          "type": "number",
          "minimum": 0,
          "default": 0
        },
        "value": {
          "type": "object"
        },
        "valueLabel": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "flag": {
          "type": "object"
        },
        "bitMatching": {
          "type": "object"
        },
        "parameterGroup": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "SYSTEM",
              "BATTERY",
              "SENSOR"
            ]
          }
        },
        "pollPeriod": {
          "type": "number",
          "description": "Период опроса параметра по MODBUS (мс)",
          "minimum": 0,
          "default": 0
        },
        "configPath": {
          "type": "string",
          "description": "Представление параметра в config-файле",
          "pattern": "^#/[\\w/]+$"
        },
        "ble": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "characteristicUuid": {
              "type": "string",
              "pattern": "^([0-9a-f-])+$",
              "minLength": 36,
              "maxLength": 36
            },
            "descriptorUuid": {
              "type": "string",
              "pattern": "^([0-9a-f-])+$",
              "minLength": 4,
              "maxLength": 4
            }
          },
          "required": [
            "characteristicUuid"
          ]
        }
      },
      "required": [
        "sortOrder",
        "configPath",
        "pollPeriod",
        "parameterGroup"
      ]
    },
    "parameter": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "$id": {
          "type": "string",
          "minLength": 0
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "$ref": "#/$defs/description"
        },
        "readonly": {
          "type": "boolean"
        },
        "valueType": {
          "type": "string",
          "enum": [
            "BOOL",
            "INT8",
            "UINT8",
            "FLAG8",
            "INT16",
            "UINT16",
            "FLAG16",
            "INT32",
            "UINT32",
            "FLAG32",
            "FLOAT32",
            "STRING",
            "IPADDR"
          ],
          "default": "BOOL"
        },
        "defaultValue": {
          "type": [
            "string",
            "array"
          ]
        },
        "meta": {
          "$ref": "#/$defs/parameterMeta"
        }
      },
      "required": [
        "title",
        "description",
        "readonly",
        "valueType",
        "defaultValue",
        "meta"
      ]
    },
    "module": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "#include": {
          "$ref": "#/$defs/json"
        },
        "title": {
          "$ref": "#/$defs/title"
        },
        "description": {
          "$ref": "#/$defs/description"
        },
        "type": {
          "$ref": "#/$defs/uuid16"
        },
        "parameters": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9a-f]+$": {
              "$ref": "#/$defs/parameter"
            }
          },
          "minProperties": 1
        }
      }
    },
    "sensorModule": {
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "$schema": {
      "$ref": "#/$defs/json"
    },
    "#include": {
      "$ref": "#/$defs/json"
    },
    "type": {
      "$ref": "#/$defs/uuid16"
    },
    "title": {
      "type": "string",
      "minLength": 0
    },
    "description": {
      "type": [
        "string",
        "null"
      ]
    },
    "lifeCycle": {
      "$ref": "#/$defs/lifeCycle"
    },
    "updaterReleaseType": {
      "type": "string",
      "pattern": "^([0-9a-z-])+$"
    },
    "commands": {
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "string",
        "enum": [
          "CUSTOM_COMMAND",
          "REQUEST_CONNECT",
          "REFRESH_DATA",
          "READ_FILE",
          "WRITE_FILE",
          "STAT_FILE",
          "SET_TIME",
          "REBOOT"
        ]
      }
    },
    "modules": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9a-f]+$": {
          "$ref": "#/$defs/module"
        }
      },
      "minProperties": 1
    }
  }
}